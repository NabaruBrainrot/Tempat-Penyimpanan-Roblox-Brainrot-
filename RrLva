-- =========================
-- GUI Copy Fixed YouTube Name
-- =========================
local TweenService = game:GetService("TweenService")

local fixedName = "@FaDhenGaming-ge8fo"

local gui = Instance.new("ScreenGui")
gui.Name = "CopyGui"
gui.ResetOnSpawn = false
pcall(function()
    gui.Parent = game:GetService("CoreGui")
end)

-- Frame utama
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 370, 0, 200)
frame.Position = UDim2.new(0.5, 0, 0.41, 0)
frame.AnchorPoint = Vector2.new(0.5, 0.5)
frame.BackgroundColor3 = Color3.fromRGB(35, 35, 45)
frame.Active = true
frame.Draggable = true
frame.Parent = gui
Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 12)

local border = Instance.new("UIStroke", frame)
border.Thickness = 1.5
border.Color = Color3.fromRGB(80, 80, 100)
border.Transparency = 0.3

-- Title (lebih bagus & natural)
local desc = Instance.new("TextLabel", frame)
desc.Size = UDim2.new(0.9, 0, 0, 30)
desc.Position = UDim2.new(0.05, 0, 0.1, 0)
desc.BackgroundTransparency = 1
desc.Text = "new script update check on my youTube"
desc.Font = Enum.Font.Gotham
desc.TextColor3 = Color3.fromRGB(235, 235, 235)
desc.TextSize = 18
desc.TextWrapped = true

-- TextBox (boleh diubah user)
local textbox = Instance.new("TextBox", frame)
textbox.Size = UDim2.new(0.9, 0, 0, 45)
textbox.Position = UDim2.new(0.05, 0, 0.32, 0)
textbox.PlaceholderText = "@FaDhenGaming-ge8fo"
textbox.Font = Enum.Font.Gotham
textbox.Text = fixedName
textbox.TextSize = 18
textbox.TextColor3 = Color3.new(1, 1, 1)
textbox.TextXAlignment = Enum.TextXAlignment.Center
textbox.BackgroundColor3 = Color3.fromRGB(50, 50, 65)
textbox.Parent = frame
Instance.new("UICorner", textbox).CornerRadius = UDim.new(0, 8)

local stroke = Instance.new("UIStroke", textbox)
stroke.Color = Color3.fromRGB(80, 80, 100)
stroke.Thickness = 1
stroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border

-- Info label
local infoLabel = Instance.new("TextLabel", frame)
infoLabel.Size = UDim2.new(0.9, 0, 0, 25)
infoLabel.Position = UDim2.new(0.05, 0, 0.55, 0)
infoLabel.BackgroundTransparency = 1
infoLabel.Text = "paste to YouTube then get new script "
infoLabel.Font = Enum.Font.Gotham
infoLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
infoLabel.TextSize = 16
infoLabel.TextTransparency = 1
infoLabel.Visible = false

local showingInfo = false

-- Tombol helper
local function createButton(parent, text, pos)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0.9, 0, 0, 40)
    btn.Position = pos
    btn.Text = text
    btn.Font = Enum.Font.Gotham
    btn.TextSize = 18
    btn.TextColor3 = Color3.fromRGB(230, 230, 230)
    btn.BackgroundColor3 = Color3.fromRGB(50, 50, 65)
    btn.AutoButtonColor = false
    btn.Parent = parent
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 10)

    local stroke = Instance.new("UIStroke", btn)
    stroke.Thickness = 1
    stroke.Color = Color3.fromRGB(80, 80, 100)
    stroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border

    btn.MouseEnter:Connect(function()
        TweenService:Create(btn, TweenInfo.new(0.12), {
            BackgroundColor3 = Color3.fromRGB(60, 60, 80)
        }):Play()
    end)

    btn.MouseLeave:Connect(function()
        TweenService:Create(btn, TweenInfo.new(0.12), {
            BackgroundColor3 = Color3.fromRGB(50, 50, 65)
        }):Play()
    end)

    return btn
end

-- Tombol Copy (selalu copy fixedName)
local copyBtn = createButton(frame, "copy to clipboard", UDim2.new(0.05, 0, 0.72, 0))

copyBtn.MouseButton1Click:Connect(function()
    setclipboard(fixedName)

    pcall(function()
        game.StarterGui:SetCore("SendNotification", {
            Title = "succes",
            Text = "Copied youtube name",
            Duration = 3
        })
    end)

    if not showingInfo then
        showingInfo = true
        infoLabel.Visible = true

        TweenService:Create(infoLabel, TweenInfo.new(0.25), {
            TextTransparency = 0
        }):Play()

        task.delay(2, function()
            TweenService:Create(infoLabel, TweenInfo.new(0.35), {
                TextTransparency = 1
            }):Play()
            task.wait(0.35)
            infoLabel.Visible = false
            showingInfo = false
        end)
    end
end)